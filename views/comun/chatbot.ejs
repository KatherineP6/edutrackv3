
<div id="chatbot" class="chat-container" data-username="<%= typeof user !== 'undefined' && user.name ? user.name : 'Usuario' %>">
  <button class="chat-toggle" id="chatToggle">💬</button>
  <div class="chat-header">
    🎨 Chat EduTrack360
    <button id="minimizeChatbot" title="Minimizar chat" style="background:none; border:none; font-size:18px; cursor:pointer;">&#x2212;</button>
  </div>
  <div class="chat-body" id="chatbotMessages">
      <!-- Los mensajes aparecerán aquí -->
  </div>

  <div class="chat-input">
    <input type="text" id="chatbotInput" placeholder="Escribe tu mensaje" />
    <button id="chatbotSend" class="chatbot-send">>></button>
  </div>
  <div id="writing"></div>
</div>


<div id="chatbotBubble" style="display:none; position: fixed; bottom: 20px; right: 20px; background-color: #cdb4db; color: #2d3142; border-radius: 50%; width: 60px; height: 60px; font-size: 28px; text-align: center; line-height: 60px; cursor: pointer; box-shadow: 0 4px 10px rgba(0,0,0,0.15);">
  💬
</div>

