  <title>Dashboard Administrador</title>
  <link rel="stylesheet" href="/assets/css/administrador/dashboard.css" />
</head>
<body>
<section id="dashboard" class="tab-section active">
  <div class="dashboard-home dashboard-content">

    <!-- Primera fila con dos tarjetas lado a lado -->
    <div class="top-row">
      <div id="card-total-capacidad" class="card chart-container">
